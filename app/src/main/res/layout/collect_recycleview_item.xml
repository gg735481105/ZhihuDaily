<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card-view="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="4dp"
    android:foreground="?attr/selectableItemBackground"
    card-view:cardElevation="3dp"
    card-view:cardMaxElevation="3dp"
    card-view:cardPreventCornerOverlap="true"
    card-view:cardUseCompatPadding="true"
    card_view:cardBackgroundColor="?attr/cardview_background"
    card_view:cardCornerRadius="3dp"
    android:id="@+id/collect_item_carview">

    <LinearLayout
        android:id="@+id/item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="@drawable/mid_grey_ripple"
        android:orientation="vertical"
        android:paddingBottom="@dimen/item_margin"
        android:paddingTop="@dimen/item_margin">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:textColor="?attr/text_primary"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="?attr/text_primary"
            android:textSize="@dimen/text_size" />
    </LinearLayout>


</android.support.v7.widget.CardView>
